<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/text_widget"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_btn2"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/cenza"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mais"
            android:layout_width="35dp"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-36dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/text_widget"
            android:clickable="true"
            android:text="+"
            android:textColor="@color/transparent"
            android:textSize="50dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/menos"
        android:layout_width="66dp"
        android:layout_height="81dp"
        android:layout_alignEnd="@+id/layout_widget"
        android:layout_alignBottom="@+id/layout_widget"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:text="-"
        android:textColor="@color/transparent"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/mais2"
        android:layout_width="75dp"
        android:layout_height="78dp"
        android:layout_alignEnd="@+id/layout_widget"
        android:layout_alignBottom="@+id/layout_widget"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-37dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:text="-"
        android:textColor="@color/transparent"
        android:textSize="50dp" />

</RelativeLayout>